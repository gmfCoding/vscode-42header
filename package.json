{
  "name": "42header",
  "displayName": "42 Header",
  "description": "42 header for VSCode : www.42.fr",
  "version": "0.42.8",
  "publisher": "gmfCoding",
  "icon": "42.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gmfCoding/vscode-42header"
  },
  "bugs": {
    "url": "https://github.com/gmfCoding/vscode-42header/issues"
  },
  "homepage": "https://github.com/gmfCoding/vscode-42header",
  "license": "MIT",
  "engines": {
    "vscode": "^1.6.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "42header",
      "properties": {
        "42header.username": {
          "type": "string",
          "default": "marvin",
          "description": "Username to use in 42 headers"
        },
        "42header.email": {
          "type": "string",
          "description": "Email address to use in 42 headers"
        },
        "42header.remove42": {
          "type": "boolean",
          "description": "Whether or not to remove the 42 symbol from the header"
        },
        "42header.keepAuthor": {
          "type": "boolean",
          "default": true,
          "description": "Keeps the original author and only updates the 'Updated By' field"
          },
          "42header.ignored": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files which will not be able to be saved"
          }
        }
    },
    "commands": [
      {
        "command": "42header.insertHeader",
        "title": "42 Header: Insert",
        "when": "editorTextFocus"
      },
	  {
        "command": "42header.toggleAutoUpdate",
        "title": "42 Header: Toggle Auto Update"
      }
    ],
    "keybindings": [
      {
        "command": "42header.insertHeader",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^6.0.45",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "moment": "^2.15.0"
  }
}
